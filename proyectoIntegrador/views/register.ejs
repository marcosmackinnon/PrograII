<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logoheader.jpg" />

	<title> Mercedez benz Store</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form action="/users/register" method="post" class="formulario-registro">

				<label for="email">Email:</label>
				<input type="email" name="email" id="email" >
			  
				<label for="usuario">Nombre de usuario:</label>
				<input type="text" name="usuario" id="usuario" required>
			  
				<label for="contrasena">Contrase√±a:</label>
				<input type="password" name="contrasena" id="contrasena">
			  
				<label for="nacimiento">Fecha de nacimiento:</label>
				<input type="date" name="fecha_nacimiento" id="nacimiento" required>

				<label for="dni">DNI:</label>
				<input type="text" name="dni" id="dni" required>

				<label for="foto_perfil">Foto de perfil:</label><!--Duda-->
				<input type="text" name="foto_perfil" id="foto_perfil" value="images/products/default-image.png">



				<button type="submit">Registrarme</button>
			</form>

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>

</html>